<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:layout_height="match_parent" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical" >

            <TextView
                android:id="@+id/reloj"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="00"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#620019"
                android:textSize="28sp" />



            <TextView
                android:id="@+id/parrafo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Este es  un segundo texto de prueba que realizará el niño para ver la velocidad lectora que  realiza en un determinado tiempo."
                android:textAlignment="gravity"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#131313"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/inicio"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_marginTop="10dp"

                    android:layout_marginLeft="40dp"
                    android:background="@drawable/ic_home_black_24dp"
                    android:backgroundTint="@color/purple_500"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                    android:textColor="@color/cardview_light_background"

                    android:textSize="15sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/siguiente"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="150dp"
                    android:background="@drawable/nexxt"
                    android:backgroundTint="@color/purple_500"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="15sp"

                    />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>